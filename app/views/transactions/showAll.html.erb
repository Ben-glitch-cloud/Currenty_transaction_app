<link link="/Currency_transaction/app/assets/stylesheets/showAll.css" rel="stylesheet" type="text/css">

<div class='nav'>
    <div class='navTitle'> 
        <h1>All Transactions</h1>
    </div> 

    <div class='navCon'>  
        <ul>
            <li><a href="/transactions/index">Home</a></li>
            <li><a href="/transactions/new">Creat a new transaction</a></li> 
        </ul>
    </div>
</div>

<div class='tableCon'>
<table>  
    <tr> 
        <th>Id</th>
        <th>Customer ID</th>
        <th>Currency Input</th>
        <th>Amount Input</th> 
        <th>Currency Output</th>
        <th>Amount Output</th> 
        <th>Date of Transcation</th> 
        <th>Link</th>
    </tr>
        <% @transactions.each do |t| %> 
        <tr>    
            <td><%= t.id %></td>
            <td><%= t.customer_id %></td>
            <td><%= t.currency_input %></td>
            <td><%= t.amount_input %></td>
            <td><%= t.currency_output %></td>
            <td><%= t.amount_output %></td>
            <td><%= t.created_at.strftime("%Y-%m-%d : %H:%M") %></td> 
            <td><a href="/transactions/<%= t.id %>">Show</a></td> 
        <tr>
         <% end %>
</table> 
</div>

